    "slip-0010",
    "crypto",
    "trezor"
  ],
  "author": "Aleksey Popov",
  "license": "MIT",
  "dependencies": {
    "bip39": "3.0.2",
    "create-hmac": "1.1.7",
    "tweetnacl": "1.0.3"
  },
  "devDependencies": {
    "@types/jest": "25.2.3",
    "@types/node": "14.0.4",
    "jest": "25.5.4",
    "jest-cli": "26.0.1",
    "ts-jest": "25.5.1",
    "typescript": "3.9.3"
  }
